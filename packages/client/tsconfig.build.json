{
  "extends": "./tsconfig",
  // This config is for emitting declarations (.d.ts) only
  // Actual .ts source files are transpiled via babel
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__/**/*", "**/*/demo"]
}
